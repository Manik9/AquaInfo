<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IdPassScreen" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>\
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="WhiteButtonsBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>





    <style name="BlueButtons" parent="WhiteButtonsBackground">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RedButtons" parent="WhiteButtonsBackground">
    <item name="android:background">@color/Red</item>
    <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cardViewStyler">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

</resources>
