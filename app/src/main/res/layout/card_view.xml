<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginBottom="2dp"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="#3498db"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardHeading"
            android:stateListAnimator="@animator/cardanimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:id="@+id/drinkable_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="GSM_Number_of_Sensor"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Date"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/carder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="4dp">

                    <GridLayout
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:animationCache="true"
                        android:background="#2980b9"
                        android:columnCount="4"
                        android:rowCount="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="0.5"
                            android:layout_gravity="left"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <TextView
                                android:id="@+id/as2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:padding="2dp"
                                android:text="•Arsenic:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/d_o2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:padding="2dp"
                                android:text="•D.Oxygen:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/turbidity2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:padding="2dp"
                                android:text="•Turb.:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/orp2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:padding="2dp"
                                android:text="•O.R.P:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/rcl2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:padding="2dp"
                                android:text="•R.Cl:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/temperature2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:padding="2dp"
                                android:text="•Temp:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="0.5"
                            android:layout_gravity="left"
                            android:background="@color/hh"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/as"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:fontFamily="monospace"
                                android:gravity="start"
                                android:padding="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/d_o"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:fontFamily="monospace"
                                android:gravity="start"
                                android:padding="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/turbidity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:fontFamily="monospace"
                                android:gravity="start"
                                android:padding="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/orp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:fontFamily="monospace"
                                android:gravity="start"
                                android:padding="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/rcl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:fontFamily="monospace"
                                android:gravity="start"
                                android:padding="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/temperature"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:fontFamily="monospace"
                                android:gravity="start"
                                android:padding="2dp"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="0.5"
                            android:layout_gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/conductivity2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="•Cond:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/fl2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="•Fl:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/salinity2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="•Sal:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/quantity2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="•E-Coli"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ph2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:text="•P.H:"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_columnWeight="0.5"
                            android:layout_gravity="right"
                            android:background="@color/hh"
                            android:orientation="vertical"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp">

                            <TextView
                                android:id="@+id/conductivity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/fl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/salinity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ecoli"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/ph"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="right"
                                android:fontFamily="monospace"
                                android:gravity="right"
                                android:padding="2dp"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />
                        </LinearLayout>


                    </GridLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#2980b9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:text="@string/latitude"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:text="@string/longitude"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/viewmap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/view_map" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>